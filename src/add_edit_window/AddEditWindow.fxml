      fx:controller="add_edit_window.AddEditWindowController">
    <children>
        <MenuBar>
            <menus>
                <Menu mnemonicParsing="false" text="Plik">
                    <items>
                        <MenuItem fx:id="openDictionary" mnemonicParsing="false" text="Wczytaj plik języka"/>
