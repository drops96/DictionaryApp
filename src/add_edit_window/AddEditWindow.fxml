                <ChoiceBox fx:id="sourceLang" prefWidth="150.0" GridPane.columnIndex="1">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="angielski"/>
                            <String fx:value="polski"/>
                            <String fx:value="niemiecki"/>
                        </FXCollections>
                    </items>
                </ChoiceBox>
                <TextField fx:id="wordText" promptText="Wprowadź słowo..." GridPane.columnIndex="2"/>
                <TextField fx:id="translationText" promptText="Wprowadź słowo..." GridPane.columnIndex="2"
                           GridPane.rowIndex="1"/>
