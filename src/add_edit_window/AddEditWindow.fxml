                <RowConstraints maxHeight="226.0" minHeight="4.0" prefHeight="37.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="291.0" minHeight="10.0" prefHeight="33.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <Label prefHeight="17.0" prefWidth="85.0" text="Język źródłowy" GridPane.halignment="CENTER"
